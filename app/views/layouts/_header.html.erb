
<header class="bg-gray-700 shadow p-4 fixed top-0 left-0 w-full z-50">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-xl font-bold">
      <%= link_to "SakeLog", sake_logs_path, class: "text-yellow-600" %>
    </h1>

    <nav class="space-x-4">
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo_method: :delete, confirm: "ログアウトしますか？" }, class: "text-red-500 hover:underline" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "text-yellow-600 hover:underline" %>
        <%= link_to "新規登録", new_user_registration_path, class: "text-yellow-600 hover:underline" %>
      <% end %>
    </nav>
  </div>
</header>
